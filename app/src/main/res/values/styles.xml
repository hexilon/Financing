    <style name="ExchangeRateItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExchangeRateItem.Title" parent="ExchangeRateItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExchangeRateItem.Price" parent="ExchangeRateItem">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ExchangeRateItem.Summary" parent="ExchangeRateItem">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ForexEventItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
